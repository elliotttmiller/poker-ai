# Project PokerMind Environment Configuration Template
# Copy this file to .env and fill in your actual values

# LM Studio Configuration
LLM_BASE_URL=http://localhost:1234/v1
LLM_API_KEY=not-needed-for-local
LLM_MODEL_NAME=Meta-Llama-3.1-8B-Instruct-Q5_K_M
LLM_TIMEOUT=30
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# Performance Configuration
MAX_INFERENCE_TIME=0.8
PARALLEL_PROCESSING=true

# Model Paths
GTO_CORE_MODEL_PATH=models/gto_core_v1.onnx
HAND_STRENGTH_MODEL_PATH=models/hand_strength_estimator.onnx
GTO_PREFLOP_MODEL_PATH=models/gto_preflop_v1.onnx
GTO_RIVER_MODEL_PATH=models/gto_river_v1.onnx

# Logging Configuration
LOG_LEVEL=INFO
SAVE_DECISIONS=true
SAVE_HAND_HISTORY=true
NARRATION_OUTPUT_DIR=data/hand_history/narrations/

# Training Configuration
TRAINING_DATA_DIR=data/training/
TOURNAMENT_RESULTS_DIR=tournament_results/

# Hardware Configuration (for reference)
# System: 16GB RAM, NVIDIA GTX 1070 8GB VRAM
CUDA_AVAILABLE=true
ONNX_PROVIDERS=CUDAExecutionProvider,CPUExecutionProvider

# Development Settings
DEBUG_MODE=false
PROFILING_ENABLED=false